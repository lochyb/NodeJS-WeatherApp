<div class="dataArea">
    <div class="inline-row">
      <h2>
        <%= weatherData.location %>, <%= weatherData.country %>
      </h2>
      <h1><%= weatherData.currentTemp %>˚</h1>
    </div>

    <div class="inline-row">
      <h3 class="forecast"><%= weatherData.currentForecast%></h3>
      <img class="right" src=<%= weatherData.icon %>>
    </div>

    <div>
      <div class="inline-row">
        <p >Humidity:</p>
        <p ><%= weatherData.humidity %>%</p>
      </div>
      <div class="inline-row">
        <p >Windspeed:</p>
        <p ><%= weatherData.windspeed %>km/h</p>
      </div>
      <div class="inline-row">
        <p >Pressure:</p>
        <p ><%= weatherData.pressure %>hPa</p>
      </div>
      <div class="inline-row">
        <p >Description:</p>
        <p ><%= weatherData.description %></p>
      </div>
      <div class="inline-row">
        <p >Min Temp:</p>
        <p ><%= weatherData.tempMin %>˚</p>
      </div>
      <div class="inline-row">
        <p >Max Temp:</p>
        <p ><%= weatherData.tempMax %>˚</p>
      </div>
      </div>
    </div>
  </div>